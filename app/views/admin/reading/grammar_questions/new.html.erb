<div class="modal-content">
  <div class="modal-header no-padding">
    <div class="table-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <span class="white">&times;</span>
      </button>
      <%= t ".title"%>
    </div>
  </div>
  <%= form_for @question, url: admin_reading_grammar_questions_path, html: {class: "form-horizontal"}  do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="modal-body no-padding">
      <div class="row container">
        <!-- form them cau hoi -->
        <div class="col-xs-12">
          <!-- PAGE CONTENT BEGINS -->
          <div class="space-6"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="form-field-1-1"><%= t ".question"%></label>
            <div class="col-sm-10">
              <%= f.cktext_area :title, rows: 3 %>
            </div>
          </div>
          <%= f.fields_for :answers do |ff| %>
            <div class="form-group">
              <label class="col-sm-2"><%= t ".option"%> <%= option ff.index %></label>
              <div class="col-sm-8">
                <%= ff.text_field :content, class: "form-control"%>
              </div>
              <div class="col-sm-2">
                <%= ff.check_box :truth, class: "form-control"%> <%= t ".is_answer"%>
              </div>
            </div>
            <div class="col-sm-12"></div>
          <% end %>
          <div class="hr hr-16 hr-dotted"></div>
          <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>

    <div class="modal-footer no-margin-top">
      <button class="btn btn-sm btn-danger pull-left" data-dismiss="modal">
        <i class="ace-icon fa fa-times"></i>
        <%= t ".close"%>
      </button>
      <button class="btn btn-sm btn-danger pull-left" type= "submit">
        <i class="ace-icon fa fa-check"></i>
        <%= t ".submit"%>
      </button>
    </div>
  <% end %>
</div><!-- /.modal-content -->
