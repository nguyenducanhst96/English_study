<div class="modal-content">
  <div class="modal-header no-padding">
    <div class="table-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        <span class="white">&times;</span>
      </button>
      <%= t ".title"%>
    </div>
  </div>
  <%= form_for @question_type, url: admin_reading_paragraph_questions_path, html: {class: "form-horizontal"}  do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="modal-body no-padding">
      <div class="row container">
        <!-- form them cau hoi -->
        <div class="col-xs-12">
          <!-- PAGE CONTENT BEGINS -->
          <div class="space-6"></div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="form-field-1-1"><%= t ".file"%></label>
            <div class="col-sm-9">
              <%= f.cktext_area :content, rows: 3 %>
            </div>
          </div>
          <%= f.fields_for :questions do |ff,index| %>
            <div class="col-sm-2"></div>
            <div class="col-sm-9">
              <div class="widget-box">
                <div class="widget-header">
                  <h4 class="widget-title"><%= t ".question"%><%=ff.index + 1 %></h4>
                  <div class="widget-toolbar">
                    <a href="#" data-action="collapse">
                      <i class="ace-icon fa fa-chevron-up"></i>
                    </a>
                  </div>
                </div>
                <div class="widget-body">
                  <div class="widget-main">
                    <div class="form-group">
                      <label class="col-sm-3"><%= t ".question"%></label>
                      <div class="col-sm-9">
                        <%= ff.text_field :title, class: "form-control", id: "form-field-1-1" %>
                      </div>
                    </div>
                    <%= ff.fields_for :answers do |fff| %>
                      <div class="form-group">
                        <label class="col-sm-3"><%= t ".option"%> <%= option fff.index %></label>
                        <div class="col-sm-7">
                          <%= fff.text_field :content, class: "form-control"%>
                        </div>
                        <div class="col-sm-2">
                          <%= fff.check_box :truth, class: "form-control"%> <%= t ".is_answer"%>
                        </div>
                      </div>
                      <div class="col-sm-12"></div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="hr hr-16 hr-dotted"></div>
          <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div>

    <div class="modal-footer no-margin-top">
      <button class="btn btn-sm btn-danger pull-left" data-dismiss="modal">
        <i class="ace-icon fa fa-times"></i>
        <%= t ".close"%>
      </button>
      <button class="btn btn-sm btn-danger pull-left" type= "submit">
        <i class="ace-icon fa fa-check"></i>
        <%= t ".submit"%>
      </button>
    </div>
  <% end %>
</div><!-- /.modal-content -->
